generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id
  email        String        @unique
  fullname     String?
  image        String?
  Resumes      Resume[]
  Appications  Application[]
  createdAt    DateTime      @default(now())
  insights     Insights[]
  Subscription Subscription  @default(Free)
  score        Score?
  Usage        Usage?

  @@index([id])
}

enum Subscription {
  Free
  Pro
}

model Resume {
  id            String        @id @default(dbgenerated("gen_random_uuid()"))
  userId        String
  resumeContent String
  name          String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  User          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  applications  Application[]

  @@index([userId])
}

model Application {
  id             String   @id @default(dbgenerated("gen_random_uuid()"))
  userId         String
  companyName    String
  roleTitle      String
  resumeId       String
  resumeUsed     String
  Date           DateTime
  Link           String
  jobDescription String
  createdAt      DateTime @default(now())
  Status         Status   @default(Applied)
  Resume         Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  User           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@index([Status])
  @@index([companyName])
  @@index([id])
}

model Insights {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  userId    String   @unique
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Score {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  userId    String   @unique
  Scoredata Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum Status {
  Offer
  Interviewing
  Applied
  Pending
  No_Response
  Rejected
}

model Usage {
  id                   String @id @default(dbgenerated("gen_random_uuid()"))
  userId               String @unique
  current_Applications Int   @default(0)
  current_Resumes      Int   @default(0)
  total_Applications   Int?   @default(20)
  total_resume         Int?   @default(2)
  User                 User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
