generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String        @id
  email       String        @unique
  fullname    String?
  image       String?
  Resumes     Resume[]
  Appications Application[]
  createdAt   DateTime      @default(now())

  @@index([id])
}

model Resume {
  id               String          @id @default(dbgenerated("gen_random_uuid()"))
  userId           String
  resumeContent    String
  name             String
  OldResumeChanges ResumeChanges[] @relation("OldResume")
  NewResumeChanges ResumeChanges[] @relation("NewResume")
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  User             User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  applications     Application[]

  @@index([userId])
}

model Application {
  id             String   @id @default(dbgenerated("gen_random_uuid()"))
  userId         String
  companyName    String
  roleTitle      String
  resumeId       String
  resumeUsed     String
  Date           DateTime
  Link           String
  jobDescription String
  createdAt      DateTime @default(now())
  Status         Status   @default(Applied)
  Resume         Resume   @relation(fields: [resumeId], references: [id])
  User           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@index([Status])
  @@index([companyName])
}

model ResumeChanges {
  id            String   @id @default(dbgenerated("gen_random_uuid()"))
  old_resume_id String
  new_resume_id String
  changed       String
  removed       String
  notChanged    String
  oldResume     Resume   @relation("OldResume", fields: [old_resume_id], references: [id])
  newResume     Resume   @relation("NewResume", fields: [new_resume_id], references: [id])
  dateChanged   DateTime @default(now())
  resumeId      String?
}

enum Status {
  Offer
  Interviewing
  Applied
  Pending
  No_Response
  Rejected
}
